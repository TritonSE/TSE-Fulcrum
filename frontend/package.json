{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "vite",
    "preview": "vite preview",
    "build": "DISABLE_ESLINT_PLUGIN=true vite build",
    "format": "prettier --write .",
